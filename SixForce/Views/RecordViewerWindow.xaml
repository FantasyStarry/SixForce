<Window x:Class="SixForce.Views.RecordViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="查看记录" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ThemeBackgroundBrush}">
    
    <Window.Resources>
        <!-- 切换按钮样式 -->
        <Style x:Key="ToggleTabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryDarkBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题和信息 -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="RecordNameText"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock x:Name="RecordTimeText"
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text=" · " 
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock x:Name="RecordDurationText"
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text=" · " 
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock x:Name="RecordPointsText"
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                </StackPanel>
            </StackPanel>
            
            <!-- 切换按钮组 -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource ThemeSurfaceBrush}" 
                    CornerRadius="6" 
                    Padding="3">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="VoltageTab"
                                 Content="电压(mV)" 
                                 Style="{StaticResource ToggleTabButton}"
                                 IsChecked="True"
                                 Checked="VoltageTab_Checked"
                                 GroupName="CurveMode"/>
                    <RadioButton x:Name="ForceTab"
                                 Content="力值(N)" 
                                 Style="{StaticResource ToggleTabButton}"
                                 Checked="ForceTab_Checked"
                                 GroupName="CurveMode"
                                 Margin="3,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- 注释区域 -->
        <Border x:Name="CommentBorder"
                Grid.Row="1"
                Background="{DynamicResource ThemePrimaryLightBrush}"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,0,0,12"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="注释"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemePrimaryBrush}"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="CommentText"
                           FontSize="13"
                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- 曲线画布区域 -->
        <Border Grid.Row="2" 
                Background="{DynamicResource ThemeSurfaceBrush}"
                CornerRadius="8"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                ClipToBounds="True">
            <Grid>
                <!-- 网格背景 -->
                <Canvas ClipToBounds="True">
                    <Canvas.Background>
                        <DrawingBrush TileMode="Tile" 
                                      Viewport="0,0,50,50" 
                                      ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <LineGeometry StartPoint="0,0" EndPoint="50,0"/>
                                            <LineGeometry StartPoint="0,0" EndPoint="0,50"/>
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="{DynamicResource ThemeGridLineBrush}" Thickness="0.5"/>
                                    </GeometryDrawing.Pen>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Canvas.Background>
                </Canvas>
                
                <!-- 数据曲线画布 -->
                <Canvas x:Name="CurveCanvas" 
                        Background="Transparent"
                        ClipToBounds="True"
                        SizeChanged="CurveCanvas_SizeChanged"/>
            </Grid>
        </Border>
        
        <!-- 底部图例 -->
        <Border Grid.Row="3" 
                Margin="0,12,0,0"
                Background="{DynamicResource ThemeSurfaceBrush}"
                CornerRadius="6"
                Padding="10,8">
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Ellipse Width="8" Height="8" Fill="#FC8181"/>
                    <TextBlock Text="Fx" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Ellipse Width="8" Height="8" Fill="#68D391"/>
                    <TextBlock Text="Fy" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Ellipse Width="8" Height="8" Fill="#63B3ED"/>
                    <TextBlock Text="Fz" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Ellipse Width="8" Height="8" Fill="#F6AD55"/>
                    <TextBlock Text="Mx" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                    <Ellipse Width="8" Height="8" Fill="#B794F4"/>
                    <TextBlock Text="My" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#4FD1C5"/>
                    <TextBlock Text="Mz" FontSize="12" Foreground="{DynamicResource ThemeTextPrimaryBrush}" Margin="4,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </WrapPanel>
        </Border>
    </Grid>
</Window>
