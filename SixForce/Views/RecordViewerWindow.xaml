<Window x:Class="SixForce.Views.RecordViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="æŸ¥çœ‹è®°å½•" 
        Height="640" Width="960"
        MinHeight="480" MinWidth="720"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ThemeBackgroundBrush}">
    
    <Window.Resources>
        <!-- åˆ‡æ¢æŒ‰é’®æ ·å¼ -->
        <Style x:Key="ToggleTabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryDarkBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- å›¾ä¾‹é¡¹æ ·å¼ -->
        <Style x:Key="LegendItem" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ThemeSurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- æ ‡é¢˜å’Œä¿¡æ¯ -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="RecordNameText" FontSize="18" FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock x:Name="RecordTimeText" FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text=" Â· " FontSize="12" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock x:Name="RecordDurationText" FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock Text=" Â· " FontSize="12" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    <TextBlock x:Name="RecordPointsText" FontSize="12"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                </StackPanel>
            </StackPanel>
            
            <!-- æ¨¡å¼åˆ‡æ¢ -->
            <Border Grid.Column="1" Background="{DynamicResource ThemeSurfaceBrush}" 
                    CornerRadius="6" Padding="3">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="VoltageTab" Content="ç”µåŽ‹(mV)" 
                                 Style="{StaticResource ToggleTabButton}"
                                 IsChecked="True" Checked="VoltageTab_Checked" GroupName="CurveMode"/>
                    <RadioButton x:Name="ForceTab" Content="åŠ›å€¼(N)" 
                                 Style="{StaticResource ToggleTabButton}"
                                 Checked="ForceTab_Checked" GroupName="CurveMode" Margin="3,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- æ³¨é‡ŠåŒºåŸŸ -->
        <Border x:Name="CommentBorder" Grid.Row="1"
                Background="{DynamicResource ThemePrimaryLightBrush}"
                CornerRadius="8" Padding="14,10" Margin="0,0,0,16" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ“" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Top"/>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="æ³¨é‡Š" FontSize="11" FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemePrimaryBrush}" Margin="0,0,0,4"/>
                    <TextBlock x:Name="CommentText" FontSize="13"
                               Foreground="{DynamicResource ThemeTextPrimaryBrush}" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- æ›²çº¿ç”»å¸ƒåŒºåŸŸ -->
        <Border Grid.Row="2" Background="{DynamicResource ThemeSurfaceBrush}"
                CornerRadius="8" BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1" ClipToBounds="True">
            <Grid>
                <Canvas ClipToBounds="True">
                    <Canvas.Background>
                        <DrawingBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <LineGeometry StartPoint="0,0" EndPoint="50,0"/>
                                            <LineGeometry StartPoint="0,0" EndPoint="0,50"/>
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="{DynamicResource ThemeGridLineBrush}" Thickness="0.5"/>
                                    </GeometryDrawing.Pen>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Canvas.Background>
                </Canvas>
                <Canvas x:Name="CurveCanvas" Background="Transparent" ClipToBounds="True"
                        SizeChanged="CurveCanvas_SizeChanged"/>
            </Grid>
        </Border>
        
        <!-- åº•éƒ¨å›¾ä¾‹ -->
        <Border Grid.Row="3" Margin="0,12,0,0"
                Background="{DynamicResource ThemeSurfaceBrush}"
                CornerRadius="6" Padding="12,8">
            <WrapPanel HorizontalAlignment="Center">
                <Border Style="{StaticResource LegendItem}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#F87171"/>
                        <TextBlock Text="Fx" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource LegendItem}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#4ADE80"/>
                        <TextBlock Text="Fy" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource LegendItem}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#60A5FA"/>
                        <TextBlock Text="Fz" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource LegendItem}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#FB923C"/>
                        <TextBlock Text="Mx" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource LegendItem}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#A78BFA"/>
                        <TextBlock Text="My" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource LegendItem}" Margin="0">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="#2DD4BF"/>
                        <TextBlock Text="Mz" FontSize="12" Margin="6,0,0,0"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Border>
    </Grid>
</Window>
