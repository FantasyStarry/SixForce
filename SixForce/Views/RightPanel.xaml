<UserControl x:Class="SixForce.Views.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:SixForce.Views"
             xmlns:converters="clr-namespace:SixForce.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 数据表格区域 - 自适应高度 -->
        <Border Grid.Row="0" 
                Background="#FAFBFC"
                CornerRadius="8"
                BorderBrush="#EDF2F7"
                BorderThickness="1">
            <DataGrid Style="{StaticResource DataGridStyle}"
                      ItemsSource="{Binding CalibrationData}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      SelectionUnit="Cell"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="参数" 
                                        Binding="{Binding Channel}" 
                                        Width="0.8*"/>
                    <DataGridTextColumn Header="电压(mV)" 
                                        Binding="{Binding MvValue}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="力值(N)" 
                                        Binding="{Binding ForceValue}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 参数编辑区域 -->
        <Border Grid.Row="1" 
                Background="#F7FAFC"
                CornerRadius="8"
                Margin="0,12,0,0"
                Padding="12">
            <StackPanel>
                <TextBlock Text="参数设置" 
                           FontSize="12"
                           Foreground="#A0AEC0"
                           Margin="0,0,0,8"/>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="当前参数" 
                                   FontSize="11"
                                   Foreground="#718096"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="485通讯波特率" 
                                 Height="32"
                                 IsReadOnly="True"
                                 Background="White"
                                 FontSize="12"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="修改"
                            Width="50"
                            Height="32"
                            FontSize="12"
                            VerticalAlignment="Bottom"
                            Background="#EDF2F7"
                            Foreground="#4A5568"/>
                </Grid>

                <!-- 操作按钮 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Content="清零"
                            Height="34"
                            Background="#FED7D7"
                            Foreground="#C53030"
                            Command="{Binding ShowClearChannelDialogCommand}"/>
                    <Button Grid.Column="2"
                            Content="校准"
                            Height="34"
                            Background="{StaticResource PrimaryBrush}"
                            Command="{Binding SaveCalibrationDataCommand}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 高级功能区域 -->
        <Border Grid.Row="2" 
                Margin="0,12,0,0"
                Padding="12"
                Background="White"
                CornerRadius="8"
                BorderBrush="#EDF2F7"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="高级功能" 
                           FontSize="12"
                           Foreground="#A0AEC0"
                           Margin="0,0,0,8"/>
                
                <Button Content="解耦系数编辑"
                        Height="36"
                        Style="{StaticResource OutlineButton}"
                        Command="{Binding OpenDecouplingMatrixCommand}"/>
                
                <TextBlock Text="更多功能开发中..." 
                           FontSize="11"
                           Foreground="#A0AEC0"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- 弹窗遮罩层 -->
        <Grid Grid.RowSpan="3"
              Visibility="{Binding IsClearChannelDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Rectangle Fill="#80000000"/>
            <Popup IsOpen="{Binding IsClearChannelDialogOpen}" 
                   StaysOpen="False"
                   Placement="Center">
                <views:ClearChannelDialog/>
            </Popup>
        </Grid>
    </Grid>
</UserControl>