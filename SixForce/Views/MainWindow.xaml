<Window x:Class="SixForce.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DST德森特标定软件" 
        Height="720" Width="1280"
        MinHeight="600" MinWidth="960"
        Icon="/Assets/Images/favicon.ico"
        Background="{DynamicResource ThemeBackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 顶部渐变 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{DynamicResource ThemePrimaryColor}" Offset="0"/>
            <GradientStop Color="{DynamicResource ThemePrimaryDarkColor}" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Logo渐变 -->
        <LinearGradientBrush x:Key="LogoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource ThemePrimaryColor}" Offset="0"/>
            <GradientStop Color="{DynamicResource ThemePrimaryDarkColor}" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ==================== 顶部导航栏 ==================== -->
        <Border Grid.Row="0" 
                Background="{DynamicResource ThemeHeaderBackgroundBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo和标题 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Logo图标 -->
                    <Border Width="36" Height="36" CornerRadius="8" Background="{StaticResource LogoGradient}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" 
                                              Color="{DynamicResource ThemeGlowColor}"/>
                        </Border.Effect>
                        <TextBlock Text="六" FontSize="18" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- 标题文字 -->
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="DST德森特标定软件" 
                                   FontSize="15" FontWeight="SemiBold"
                                   Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                        <TextBlock Text="六分力传感器标定系统" 
                                   FontSize="11"
                                   Foreground="{DynamicResource ThemeTextMutedBrush}"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 产品选择 -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="变送器型号" 
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox Width="180" Height="34" FontSize="13"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"/>
                </StackPanel>

                <!-- 状态指示器 -->
                <Border Grid.Column="2" 
                        Background="{DynamicResource ThemeSurfaceBrush}" 
                        CornerRadius="16" 
                        Padding="12,6"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="StatusIndicator" Width="8" Height="8" 
                                 Fill="{DynamicResource ThemeTextMutedBrush}" 
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText" Text="系统就绪" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- 主题切换 -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,12,0">
                    <TextBlock Text="主题" FontSize="11"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="ThemeToggle"
                                  Style="{StaticResource ThemeToggleButton}"
                                  Click="ThemeToggle_Click"/>
                </StackPanel>

                <!-- 设置按钮 -->
                <Button Grid.Column="4" Style="{StaticResource IconButton}" 
                        ToolTip="设置" VerticalAlignment="Center">
                    <TextBlock Text="⚙" FontSize="16" 
                               Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- ==================== 主内容区域 ==================== -->
        <Grid Grid.Row="1" Margin="12,12,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380" MinWidth="360"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧面板 -->
            <Border x:Name="LeftArea" 
                    Grid.Column="0" 
                    Style="{StaticResource CardStyle}"
                    Margin="0,0,6,0"/>

            <!-- 中间面板 -->
            <Border x:Name="CenterArea" 
                    Grid.Column="1" 
                    Style="{StaticResource CardStyle}"
                    Margin="6,0"/>

            <!-- 右侧面板 -->
            <Border x:Name="RightArea"
                    Grid.Column="2" 
                    Style="{StaticResource CardStyle}"
                    Margin="6,0,0,0"/>
        </Grid>
    </Grid>
</Window>
