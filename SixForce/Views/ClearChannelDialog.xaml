<UserControl x:Class="SixForce.Views.ClearChannelDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SixForce.Views"
             mc:Ignorable="d" 
              Height="180" Width="280"
             Background="White"
             d:DesignHeight="180" d:DesignWidth="280">
    <Border CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Padding="15" Background="White">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="请选择要清零的通道" 
                       FontSize="16" FontWeight="Medium"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <ComboBox Grid.Row="1" 
                      Width="200" Height="32"
                      ItemsSource="{Binding ChannelOptions}" 
                      SelectedItem="{Binding SelectedChannel, Mode=TwoWay}"
                      HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                <Button Content="确定" Width="80" Height="32" 
                        Background="#4CAF50"
                        Command="{Binding ConfirmClearChannelCommand}"/>
                <Button Content="取消" Width="80" Height="32" 
                        Background="#9E9E9E"
                        Command="{Binding CancelClearChannelCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
