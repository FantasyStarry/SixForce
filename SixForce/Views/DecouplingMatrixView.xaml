<UserControl x:Class="SixForce.Views.DecouplingMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="720">
    
    <UserControl.Resources>
        <!-- 矩阵输入框样式 -->
        <Style x:Key="MatrixTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Consolas, Cascadia Code"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource ThemePrimaryBrush}"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="4">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource ThemeCardBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区 -->
        <Border Grid.Row="0" Padding="20,16" 
                Background="{DynamicResource ThemeHeaderBackgroundBrush}"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="解耦系数编辑" 
                           FontSize="17" FontWeight="SemiBold" 
                           Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                <TextBlock Text="编辑六分力传感器解耦矩阵参数 (6×6)" 
                           FontSize="12"
                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- 按钮区 -->
        <Border Grid.Row="1" Padding="20,12"
                Background="{DynamicResource ThemeSurfaceBrush}">
            <WrapPanel HorizontalAlignment="Left">
                <Button Content="创建文件" Height="36" MinWidth="90"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CreateFileCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="读取文件" Height="36" MinWidth="90"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ReadFileCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="写入变送器" Height="36" MinWidth="100"
                        Command="{Binding WriteToDeviceCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="读取变送器" Height="36" MinWidth="100"
                        Style="{StaticResource OutlineButton}"
                        Command="{Binding ReadFromDeviceCommand}"/>
            </WrapPanel>
        </Border>

        <!-- 矩阵表格 -->
        <Grid Grid.Row="2" Margin="20,16,20,20">
            <Border CornerRadius="8"
                    Background="{DynamicResource ThemeSurfaceBrush}"
                    BorderBrush="{DynamicResource ThemeBorderBrush}"
                    BorderThickness="1"
                    ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="44"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 表头 -->
                    <Border Grid.Row="0" Background="{DynamicResource ThemeCardBrush}" 
                            BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="行" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Fx" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Fy" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Fz" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Mx" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="My" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Mz" FontWeight="SemiBold" FontSize="12" 
                                       Foreground="{DynamicResource ThemeTextSecondaryBrush}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- 数据行 -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding MatrixRows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource ThemeGridLineBrush}" 
                                        BorderThickness="0,0,0,1" Height="52">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding RowIndex}" 
                                                   FontSize="13" FontWeight="Medium"
                                                   Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        
                                        <TextBox Grid.Column="1" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[0], UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="2" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[1], UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="3" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[2], UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="4" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[3], UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="5" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[4], UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Grid.Column="6" Style="{StaticResource MatrixTextBox}"
                                                 Text="{Binding Values[5], UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
