<UserControl x:Class="SixForce.Views.DecouplingMatrixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="720">
    
    <UserControl.Resources>
        <!-- 操作按钮样式 -->
        <Style x:Key="MatrixButton" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="#E2E8F0"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F7FAFC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5B7FFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDF2F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主要操作按钮 -->
        <Style x:Key="PrimaryMatrixButton" TargetType="Button" BasedOn="{StaticResource MatrixButton}">
            <Setter Property="Background" Value="#5B7FFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A6AE5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D5BD9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区 -->
        <Border Grid.Row="0" Padding="20,16">
            <Grid>
                <StackPanel>
                    <TextBlock Text="解耦系数编辑" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#2D3748"/>
                    <TextBlock Text="编辑六分力传感器解耦矩阵参数 (6×6)" 
                               FontSize="12"
                               Foreground="#A0AEC0"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 按钮区 -->
        <Border Grid.Row="1" 
                Padding="20,0,20,16"
                BorderBrush="#EDF2F7"
                BorderThickness="0,0,0,1">
            <WrapPanel HorizontalAlignment="Left">
                <Button Content="创建文件" 
                        Style="{StaticResource MatrixButton}"
                        Command="{Binding CreateFileCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="读取文件" 
                        Style="{StaticResource MatrixButton}"
                        Command="{Binding ReadFileCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="写入变送器" 
                        Style="{StaticResource PrimaryMatrixButton}"
                        Command="{Binding WriteToDeviceCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="读取变送器" 
                        Style="{StaticResource PrimaryMatrixButton}"
                        Command="{Binding ReadFromDeviceCommand}"/>
            </WrapPanel>
        </Border>

        <!-- 矩阵表格 -->
        <Grid Grid.Row="2" Margin="20,16,20,20">
            <Border CornerRadius="8"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    ClipToBounds="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 表头 -->
                    <Border Grid.Row="0" Background="#F8FAFC" BorderBrush="#EDF2F7" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="行" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Fx" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Fy" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Fz" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Mx" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="My" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Mz" FontWeight="SemiBold" FontSize="13" Foreground="#718096" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- 数据行 -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding MatrixRows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EDF2F7" BorderThickness="0,0,0,1" Height="50">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- 行号 -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding RowIndex}" 
                                                   FontSize="14"
                                                   FontWeight="Medium"
                                                   Foreground="#4A5568"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                        
                                        <!-- 数据输入框 -->
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding Values[0], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                        <TextBox Grid.Column="2" 
                                                 Text="{Binding Values[1], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                        <TextBox Grid.Column="3" 
                                                 Text="{Binding Values[2], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                        <TextBox Grid.Column="4" 
                                                 Text="{Binding Values[3], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                        <TextBox Grid.Column="5" 
                                                 Text="{Binding Values[4], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                        <TextBox Grid.Column="6" 
                                                 Text="{Binding Values[5], UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="14"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Margin="4"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>