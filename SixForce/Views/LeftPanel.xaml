<UserControl x:Class="SixForce.Views.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto"
             d:DesignHeight="480" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 串口选择 -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="串口选择" 
                           FontWeight="Normal" 
                           Foreground="#444" 
                           FontSize="16"
                           HorizontalAlignment="Center" />
            <ComboBox Width="140" Height="28" Margin="0,5,0,0"
                          ItemsSource="{Binding SerialPorts}"
                          SelectedItem="{Binding SelectedSerialPort}"/>
        </StackPanel>

        <!-- 波特率 -->
        <StackPanel Grid.Row="3">
            <TextBlock Text="波特率" 
                           FontWeight="Normal" 
                           Foreground="#444" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            <ComboBox Width="140" Height="28" Margin="0,5,0,0"
                          ItemsSource="{Binding BaudRates}"
                          SelectedItem="{Binding SelectedBaudRate}"/>
        </StackPanel>

        <!-- 机码 -->
        <StackPanel Grid.Row="5">
            <TextBlock Text="机码" 
                           FontWeight="Normal" 
                           Foreground="#444" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            <TextBox Width="140" Height="28" Margin="0,5,0,0"
                         TextAlignment="Center"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Text="{Binding MachineCode}"/>
        </StackPanel>

        <!-- 标定产品编号 -->
        <StackPanel Grid.Row="7">
            <TextBlock Text="标定产品编号" 
                           FontWeight="Normal" 
                           Foreground="#444" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            <TextBox Width="140" Height="28" Margin="0,5,0,0"
                         HorizontalContentAlignment="Center"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Text="{Binding ProductId}"/>
        </StackPanel>

        <!-- 当前标定通道 -->
        <StackPanel Grid.Row="9">
            <TextBlock Text="当前标定通道" 
                           FontWeight="Normal" 
                           Foreground="#444" 
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            <ComboBox Width="140" Height="28" Margin="0,5,0,0"
                          ItemsSource="{Binding Channels}"
                          SelectedItem="{Binding SelectedChannel}"/>
        </StackPanel>

        <StackPanel Grid.Row="11">
            <TextBlock Text="{Binding IsConnected, StringFormat=连接状态: {0}}"
                    FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="13" Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="连接串口" Width="140" Height="40" Margin="0,0,0,5"
                        Background="#4CAF50" Command="{Binding ConnectCommand}"
                        FontSize="16" FontWeight="Medium" IsEnabled="{Binding CanConnect}">
                <Button.ToolTip>
                    <ToolTip>
                        <StackPanel>
                            <TextBlock Text="点击连接串口并开始读取数据"/>
                            <TextBlock Text="将自动开始刷新传感器数据"/>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Content="断开串口" Width="140" Height="40" Margin="0,0,0,0"
                        Background="#F44336" Command="{Binding DisconnectCommand}"
                        FontSize="16" FontWeight="Medium" IsEnabled="{Binding CanDisconnect}" />
        </StackPanel>
    </Grid>
</UserControl>
