<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 深色主题颜色 -->
    <Color x:Key="ThemePrimaryColor">#6B8AFF</Color>
    <Color x:Key="ThemePrimaryDarkColor">#5A79EE</Color>
    <Color x:Key="ThemePrimaryLightColor">#2D3A5C</Color>
    <Color x:Key="ThemeBackgroundColor">#0F1419</Color>
    <Color x:Key="ThemeCardColor">#1A1F2E</Color>
    <Color x:Key="ThemeSurfaceColor">#232936</Color>
    <Color x:Key="ThemeBorderColor">#2D3748</Color>
    <Color x:Key="ThemeTextPrimaryColor">#E2E8F0</Color>
    <Color x:Key="ThemeTextSecondaryColor">#A0AEC0</Color>
    <Color x:Key="ThemeTextMutedColor">#718096</Color>
    <Color x:Key="ThemeSuccessColor">#68D391</Color>
    <Color x:Key="ThemeDangerColor">#E05252</Color>
    <Color x:Key="ThemeDangerLightColor">#3D2A2A</Color>
    <Color x:Key="ThemeWarningColor">#F6AD55</Color>
    <Color x:Key="ThemeGridLineColor">#2D3748</Color>
    <Color x:Key="ThemeInputBackgroundColor">#232936</Color>
    <Color x:Key="ThemeHeaderBackgroundColor">#1A1F2E</Color>

    <!-- 深色主题画刷 -->
    <SolidColorBrush x:Key="ThemePrimaryBrush" Color="{StaticResource ThemePrimaryColor}"/>
    <SolidColorBrush x:Key="ThemePrimaryDarkBrush" Color="{StaticResource ThemePrimaryDarkColor}"/>
    <SolidColorBrush x:Key="ThemePrimaryLightBrush" Color="{StaticResource ThemePrimaryLightColor}"/>
    <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{StaticResource ThemeBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeCardBrush" Color="{StaticResource ThemeCardColor}"/>
    <SolidColorBrush x:Key="ThemeSurfaceBrush" Color="{StaticResource ThemeSurfaceColor}"/>
    <SolidColorBrush x:Key="ThemeBorderBrush" Color="{StaticResource ThemeBorderColor}"/>
    <SolidColorBrush x:Key="ThemeTextPrimaryBrush" Color="{StaticResource ThemeTextPrimaryColor}"/>
    <SolidColorBrush x:Key="ThemeTextSecondaryBrush" Color="{StaticResource ThemeTextSecondaryColor}"/>
    <SolidColorBrush x:Key="ThemeTextMutedBrush" Color="{StaticResource ThemeTextMutedColor}"/>
    <SolidColorBrush x:Key="ThemeSuccessBrush" Color="{StaticResource ThemeSuccessColor}"/>
    <SolidColorBrush x:Key="ThemeDangerBrush" Color="{StaticResource ThemeDangerColor}"/>
    <SolidColorBrush x:Key="ThemeDangerLightBrush" Color="{StaticResource ThemeDangerLightColor}"/>
    <SolidColorBrush x:Key="ThemeWarningBrush" Color="{StaticResource ThemeWarningColor}"/>
    <SolidColorBrush x:Key="ThemeGridLineBrush" Color="{StaticResource ThemeGridLineColor}"/>
    <SolidColorBrush x:Key="ThemeInputBackgroundBrush" Color="{StaticResource ThemeInputBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeHeaderBackgroundBrush" Color="{StaticResource ThemeHeaderBackgroundColor}"/>

</ResourceDictionary>
